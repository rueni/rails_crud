<h2>Signup!</h2>

<% if @message.nil? == false %>
  <strong><%= @message %></strong>
<% end %>

<%= form_for :user, url: '/users/create' do |f| %>


  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit 'Register Now!' %>

<% end %>
